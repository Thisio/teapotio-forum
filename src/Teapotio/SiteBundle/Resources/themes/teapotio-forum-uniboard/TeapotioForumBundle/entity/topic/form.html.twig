{% extends "TeapotioForumBundle:Message:entity/base.html.twig" %}

{% block Message_body %}

  <form action="{% block Message_form_path %}{% endblock %}" method="post"
        class="{% block Message_form_class %}Message-form{% endblock %}" id="{% block Message_form_id %}{% endblock %}">

    {{ form_errors(form) }}

    {{ form_widget(form) }}

    <button class="Message-form-submit">{% block Message_form_submit_content %}{% endblock %}</button>
  </form>

{% endblock %}

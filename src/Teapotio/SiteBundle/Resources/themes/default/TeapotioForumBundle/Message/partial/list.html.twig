{% extends "TeapotioSiteBundle:Layout:partial/base.html.twig" %}

{% block Partial_class %}{{ parent() }} Partial--forumMessageList{% endblock %}

{% block Partial_content %}
  {% set message = messages|first %}
  {% include "TeapotioForumBundle:Topic:entity/individual.html.twig" with {user: message.user, topic: topic, message: message, flag: flag_topic} %}

  {% include "TeapotioForumBundle:Message:component/list.html.twig" with {messages: messages|slice(1), flags: flags} %}
{% endblock %}

{% block pagination_top %}
  {% include "TeapotioSiteBundle:Pagination:base.html.twig" with {collection: messages, typeName: 'messages'|trans } %}
{% endblock %}

{% block pagination_bottom %}
  {% include "TeapotioSiteBundle:Pagination:base.html.twig" with {collection: messages, typeName: 'messages'|trans } %}
{% endblock %}

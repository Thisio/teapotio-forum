{% if size is not defined %}
  {% set size = 50 %}
{% endif %}

{% if is_link is not defined %}
  {% set is_link = true %}
{% endif %}

{% set tag = 'a' %}
{% if is_link == false %}
  {% set tag = 'div' %}
{% endif %}

<{{ tag }}{% if is_link %} href="{{ path('TeapotioBaseUserBundle_profile', {userSlug: user.slug, userId: user.id }) }}"{% endif %} class="Avatar{% if class is defined %} {{ class }}{% endif %}">
  <img src="{{ image(user.defaultAvatar.webPath).forceResize(size, null).crop(0,0,size,size) }}" class="{% if image_class is defined %} {{ image_class}}{% endif %}" />
</{{ tag }}>

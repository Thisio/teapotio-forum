{# The body of a form should have the same template as a regular message #}
{% extends "TeapotioForumBundle:entity:message/base.html.twig" %}

{#
  Required variables:
    - user
    - board
    - form
    - message (can be null)
#}

{% block Message_body %}
  {{ form_widget(form.body) }}

  <button>{% trans %}Create.topic{% endtrans %}</button>
{% endblock %}


{% block Message_footer_content %}
  {% if message is not null %}
    {% include "TeapotioForumBundle:component:message/date.html.twig" with {message: message} %}
  {% endif %}
{% endblock %}

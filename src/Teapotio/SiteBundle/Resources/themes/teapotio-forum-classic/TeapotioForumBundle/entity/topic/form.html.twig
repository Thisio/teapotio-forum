{#
  Required variables:
    - form_path
    - user (from related templates)
    - board (from parent template)
    - form
    - message (can be null)
#}

{% extends "TeapotioForumBundle:entity:topic/base.html.twig" %}

{% block Topic_prefix %}
  {{ form_errors(form) }}

  {% if existing_topics is not empty %}
    {% include "TeapotioForumBundle:entity:topic/form/prompt/duplicate.html.twig" with {
      title: "Either.you.can.change.the.title.of.your.topic.or.post.in.one.of.the.following.topics."|trans,
      topics: existing_topics
    } %}
  {% endif %}

  <form action="{% block Topic_form_path %}{% endblock %}" method="post" class="{% block Topic_form_class %}EntityTopic-form{% endblock %}" {{ form_enctype(form) }}>

{% endblock %}

{% block Topic_suffix %}
  </form>
{% endblock %}


{% block Topic_header_content %}
  {{ form_widget(form.title, {attr: {placeholder: "Title"|trans }}) }}
{% endblock %}


{% block Topic_body_content %}
  {% include "TeapotioForumBundle:component:topic/formBody.html.twig" with {form: form, message: message} %}

  {{ form_rest(form) }} {# outputs the rest of the form #}
{% endblock %}

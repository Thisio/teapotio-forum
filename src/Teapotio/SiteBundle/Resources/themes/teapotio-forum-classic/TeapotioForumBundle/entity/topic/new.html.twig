{% extends "TeapotioForumBundle:entity:topic/form.html.twig" %}

{#
  Required variables:
    - form_path
    - user
    - board
    - form
#}

{% if board is null %}
  {% set form_path = forum_path("ForumNewTopicWithoutBoard") %}
{% else %}
  {% set form_path = forum_path("ForumNewTopic", board) %}
{% endif %}

{% block Topic_form_path %}{{ form_path }}{% endblock %}

{% block Topic_form_class %}{{ parent() }}
  EntityTopic-form--new
{% endblock %}

{% block Topic_body_content %}
  {% if board is null %}
    {% include "TeapotioForumBundle:component:board/boardPicker.html.twig" %}
  {% endif %}

  {{ parent() }}
{% endblock %}

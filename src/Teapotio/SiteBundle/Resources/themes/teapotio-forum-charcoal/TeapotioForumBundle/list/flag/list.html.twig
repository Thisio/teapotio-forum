{% if flags.count != 0 %}
  <ul class="ListFlag">
    {% for flag in flags %}
      <li>
        {% if flag.message is not null %}
          {% include "TeapotioForumBundle:entity:flag/message.html.twig" with {flag: flag, message: flag.message} %}
        {% elseif flag.topic is not null %}
          {% include "TeapotioForumBundle:entity:flag/topic.html.twig" with {flag: flag, topic: flag.topic} %}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}

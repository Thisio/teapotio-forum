{% extends "TeapotioSiteBundle:Layout:partial/base.html.twig" %}

{% block Partial_class %}{{ parent() }} Partial--forumTopicList{% endblock %}

{% block Partial_content %}
  {% include "TeapotioForumBundle:Topic:component/list.html.twig"
    with {
      topics: topics,
      messages_per_page:
      messages_per_page,
      current_board: current_board
    }
  %}
{% endblock %}

{% block pagination_top %}
  {% include "TeapotioSiteBundle:Pagination:base.html.twig" with {collection: topics, typeName: 'topics'|trans, containerClass: 'ajax', linkClass: 'to-main' } %}
{% endblock %}

{% block pagination_bottom %}
  {% include "TeapotioSiteBundle:Pagination:base.html.twig" with {collection: topics, typeName: 'topics'|trans, containerClass: 'ajax', linkClass: 'to-main' } %}
{% endblock %}
